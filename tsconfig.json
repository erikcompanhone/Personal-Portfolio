{
  // Adjusted for Vercel CLI compatibility: removed experimental bundler-specific options
  // bundler + allowImportingTsExtensions triggered errors in Vercel's TypeScript pass.
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "allowImportingTsExtensions": true, // Removed for broader TS version compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "jest.setup.ts", "global.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
